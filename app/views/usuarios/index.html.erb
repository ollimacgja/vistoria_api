<div class="padd">

  <p id="notice"><%= notice %></p>

  <h2>Lista Usuarios</h2>
<hr>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th width="25%">Nome</th>
      <th width="25%">Filial</th>
      <th width="25%">Tipo</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |usuario| %>
        <tr>
          <td><%= usuario.nome %></td>
          <td><%= usuario.filial.nome %></td>

          <%if usuario.tipo==0 %>
              <td>Comum</td>
          <%else%>
              <td>Administrador</td>
          <%end%>
          <td><%= button_to 'Mostrar',  usuario_path(usuario) , method: :get ,class: "btn btn-primary"%></td>
          <td><%= button_to 'Editar', edit_usuario_path(usuario), method: :get ,class: "btn btn-warning" %></td>
          <td><%= button_to 'Deletar', usuario_path(usuario), method: :delete, data: { confirm: 'VocÃª tem certeza?' },class: "btn btn-danger" %></td>


        </tr>
    <% end %>
    </tbody>
  </table>

  <br>


</div>

<div class="widget-foot">
  <%= button_to 'Adicionar Usuario', new_usuario_path, method: :get ,class: "btn btn-success" %>
</div>
