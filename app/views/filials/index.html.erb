<div class="padd">

  <p id="notice"><%= notice %></p>

  <h2>Lista de  Filiais</h2>
<hr>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th width="70%">Nome</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @filials.each do |filial| %>
        <tr>
          <td><%= filial.nome %></td>
          <td><%= button_to 'Mostrar', filial , method: :get ,class: "btn btn-primary"%></td>
          <td><%= button_to 'Editar', edit_filial_path(filial), method: :get ,class: "btn btn-warning" %></td>
          <td><%= button_to 'Deletar', filial, method: :delete, data: { confirm: 'VocÃª tem certeza?' },class: "btn btn-danger" %></td>


        </tr>
    <% end %>
    </tbody>
  </table>

  <br>


</div>

<div class="widget-foot">
  <%= button_to 'Adicionar Filial', new_filial_path, method: :get ,class: "btn btn-success" %>

</div>
