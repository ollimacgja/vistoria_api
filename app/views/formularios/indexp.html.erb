<div class="padd">

  <p id="notice"><%= notice %></p>

  <h1>Formularios Enviados</h1>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Nome</th>
      <th>Usuarios</th>
      <th>Filiais</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% if @form.any? %>
      <% @form.each do |formulario| %>
        <% link=formulario.id.to_s+"/form_enviado"%>
        <tr>
          <td><%= formulario.nome %></td>
          <td><%= formulario.formulario_ps.map{|f| f.user.nome}.join(', ') %></td>
          <td><%= formulario.filials.pluck(:nome).join(', ')%></td>
          <td><%= button_to 'Abrir Formulario', url_for(link)  , method: :get ,class: "btn btn-primary"%></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>

  <br>


</div>

<div class="widget-foot">

</div>
